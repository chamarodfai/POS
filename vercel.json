{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/order",
      "dest": "/index.html"
    },
    {
      "src": "/daily-sales",
      "dest": "/index.html"
    },
    {
      "src": "/menu",
      "dest": "/index.html"
    },
    {
      "src": "/promotions",
      "dest": "/index.html"
    },
    {
      "src": "/reports",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
